{
  "name": "bluehawk",
  "repository": {
    "type": "git",
    "url": "https://github.com/mongodb-university/Bluehawk"
  },
  "version": "0.4.5",
  "description": "A markup language and tool for extracting code examples, checkpointing tutorials, and dynamically transforming text",
  "keywords": [
    "docs",
    "docs-as-code",
    "docs tools",
    "tutorials",
    "code examples",
    "code snippets"
  ],
  "homepage": "https://github.com/mongodb-university/Bluehawk#readme",
  "bugs": {
    "url": "https://github.com/mongodb-university/Bluehawk/issues"
  },
  "main": "./build/src",
  "bin": {
    "bluehawk": "./build/src/cli/main.js"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "test": "jest",
    "verbose": "jest --verbose",
    "coverage": "jest --coverage",
    "docs": "npx typedoc --excludePrivate --exclude '**/*.test.ts' --out docs src",
    "release": "release-it"
  },
  "author": "MongoDB Developer Education Team",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^7.1.1",
    "chevrotain": "^7.1.2",
    "ignore": "^5.1.8",
    "isbinaryfile": "^4.0.8",
    "magic-string": "^0.25.7",
    "memfs": "^3.2.0",
    "source-map": "^0.7.3",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.20.4",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-tsdoc": "^0.2.11",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "release-it": "^14.4.1",
    "ts-jest": "^26.5.2",
    "typedoc": "^0.20.28",
    "typescript": "^4.1.5"
  },
  "prettier": {
    "semi": true
  }
}
