{
  "name": "bluehawk",
  "repository": {
    "type": "git",
    "url": "https://github.com/mongodb-university/Bluehawk"
  },
  "version": "0.8.0",
  "description": "A markup language and tool for extracting code examples, checkpointing tutorials, and dynamically transforming text",
  "keywords": [
    "docs",
    "docs-as-code",
    "docs tools",
    "tutorials",
    "code examples",
    "code snippets"
  ],
  "homepage": "https://github.com/mongodb-university/Bluehawk#readme",
  "bugs": {
    "url": "https://github.com/mongodb-university/Bluehawk/issues"
  },
  "main": "./build/src",
  "bin": {
    "bluehawk": "./build/src/main.js"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "test": "jest",
    "verbose": "jest --verbose",
    "coverage": "jest --coverage",
    "docs": "cd docs && npm i && npm run build",
    "release": "release-it"
  },
  "author": "MongoDB Developer Education Team",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^7.0.0",
    "chevrotain": "^10.0.0",
    "ignore": "^5.0.0",
    "isbinaryfile": "^4.0.0",
    "magic-string": "^0.25.0",
    "memfs": "^3.0.0",
    "source-map": "^0.7.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.0.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^12.0.0",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-tsdoc": "^0.2.0",
    "jest": "^26.0.0",
    "prettier": "^2.0.0",
    "release-it": "^14.0.0",
    "ts-jest": "^26.0.0",
    "typedoc": "^0.22.0",
    "typescript": "^4.0.0"
  },
  "prettier": {
    "semi": true
  }
}
